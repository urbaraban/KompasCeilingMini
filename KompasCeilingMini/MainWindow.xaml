                        <TextBox x:Name="ShovBox" Margin="3,3,3,3" TextWrapping="Wrap" Text="0" IsReadOnly="True" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="6"/>
